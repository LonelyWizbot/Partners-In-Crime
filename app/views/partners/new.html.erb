<div class="container w-50 mt-4 p-4 shadow p-3 mb-5 bg-body rounded" style="background-color: #f8f9fa;">

<h2 class="forms-title text-center mb-4" style="color: #333;">Créez un nouveau profil partenaire</h2>

<%= simple_form_for(@partner) do |f| %>

    <div class="mb-3">
      <%= f.input :name , label:"Nom", input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>
    <div class="mb-3">
      <%= f.input :address, label:"Addresse" , input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>
    <div class="mb-3">
      <%= f.input :title, label:"Titre", input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>
    <div class="mb-3">
      <%= f.input :description, label:"Description", input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>
    <div class="mb-3">
      <%= f.input :image, as: :file %>
    </div>
    <div class="mb-3">
      <%= f.input :price, label:"Prix", input_html: { class: 'form-control shadow-sm rounded' } %>
    </div>
    <div class="d-flex justify-content-end mt-4">
      <%= link_to 'Annuler', dashboard_path, class: "btn shadow-sm rounded-pill px-4 me-2", style: "background-color: #cdcdcd; color: white;" %>
      <%= f.submit 'Créer', class: 'btn shadow-sm rounded-pill px-4', style: 'background-color: #B197FC; color: white;' %>
    </div>
<% end %>
</div>
