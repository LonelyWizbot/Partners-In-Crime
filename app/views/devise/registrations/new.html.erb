<div class="container w-50 mt-4 p-4 shadow p-3 mb-5 bg-body rounded" style="background-color: #f8f9fa;">

  <h2>Nouveau client ?</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs mt-4">

      <div class="d-flex gap-3">
        <div class="col">
          <%= f.input :first_name, label:"Prénom",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first_name" } %>
        </div>

        <div class="col">
          <%= f.input :last_name, label:"Nom",
                      required: true,
                      input_html: { autocomplete: "last_name" } %>
        </div>
      </div>

      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password, label:"Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label:"Confirmation du mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :address, label:"Adresse",
                  required: true,
                  input_html: { autocomplete: "address" } %>
      <%= f.input :zip_code, label:"Code postal",
                  required: true,
                  input_html: { autocomplete: "zip-code" } %>
      <%= f.input :city, label:"Ville",
                  required: true,
                  input_html: { autocomplete: "city" } %>
      <%= f.input :phone_number, label:"Numéro de téléphone",
                  input_html: { autocomplete: "phone-number" } %>
    </div>

    <div class="d-flex gap-3">
      <div class="form-actions">
        <%= f.button :submit, "Créer mon compte" %>
      </div>

    <% end %>
      <div class="d-flex align-items-center">
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
