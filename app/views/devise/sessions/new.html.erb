<div class="container w-50 mt-4 p-4 shadow p-3 mb-5 bg-body rounded" style="background-color: #f8f9fa;">

  <h2>Déjà client ?</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mt-4">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password, label:"Mot de passe",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label:"Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>


        <%= f.button :submit, "Se connecter" %>

      <% end %>
    <div class="mt-4 ms-1">
      <%= render "devise/shared/links" %>
    </div>
    </div>

</div>
