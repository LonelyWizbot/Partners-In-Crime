<div class="container w-50 mt-4 p-4 shadow p-3 mb-5 bg-body rounded" style="background-color: #f8f9fa;">

  <h2 class="text-center">Mot de passe oublié ?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions d-flex justify-content-center mt-4">
      <%= f.button :submit, "Envoyer le lien de réinitialisation", class:"w-50" %>
    </div>
  <% end %>

</div>
